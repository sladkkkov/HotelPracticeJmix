<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/ui/fragment">
    <facets>
        <timer id="timer"
               autostart="true"
               delay="86400000"/>
    </facets>
    <layout>
            <groupBox id="registrationCardBox"
                      caption="Заказ"
                      collapsable="true"
                      spacing="true"
                      width="95%">
                <textField id="clientNameLabel" caption="Имя клиента"/>
                <textField id="apartamentNumberLabel" caption="Номер апартаментов"/>
                <textField id="dateArrivalLabel" caption="Дата прибытия"/>
                <textField id="dateDepartureLabel" caption="Дата выселения"/>
                <checkBox id="paymentCheckBox"  caption="Оплата заказа"/>
                <checkBox id="prepaymentCheckBox"  caption="Предоплата заказа" />
                <checkBox id="covidResultCheckBox" caption="Результаты ПЦР теста на Covid-2019"/>
            </groupBox>
            <label height="20px"/>


    </layout>
</fragment>
