<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://registrationCardEdit.caption"
        focusComponent="form">
    <data>
        <instance id="registrationCardDc"
                  class="com.company.hotelpracticejmix.entity.RegistrationCard">
            <fetchPlan extends="_base">
                <property name="client">
                    <property name="contact" fetchPlan="_base"/>
                </property>
                <property name="apartaments">
                    <property name="numberApartament"/>
                </property>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="registrationCardDc">
                <column width="350px">
                    <entityPicker id="clientField" property="client">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityPicker id="apartamentsField" property="apartaments">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>

                    <fileStorageUpload  id="resultsCovidTestField" showFileName="true" property="resultsCovidTest"/>
                    <dateField id="paymentDateField" property="paymentDate"/>
                    <dateField id="prepaymentDateField" property="prepaymentDate"/>
                    <checkBox id="prepaymentIndicationField" property="prepaymentIndication"/>
                    <checkBox id="paymentIndicationField" property="paymentIndication"/>
                    <dateField id="arrivalDateField" property="arrivalDate"/>
                    <dateField id="departureDateField" property="departureDate"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
